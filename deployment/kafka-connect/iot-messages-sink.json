{
  "name": "iot-messages-sink",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "iot_messages",
    "connection.url": "jdbc:postgresql://timescaledb:5432/iot_platform",
    "connection.user": "postgres",
    "connection.password": "postgres",
    "auto.create": "true",
    "auto.evolve": "true",
    "insert.mode": "insert",
    "pk.mode": "none",
    "table.name.format": "iot_messages",
    "transforms": "rename,convertTime,exclude",
    "transforms.rename.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.rename.renames": "id:device_id",
    "transforms.convertTime.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
    "transforms.convertTime.target.type": "Timestamp",
    "transforms.convertTime.field": "timestamp",
    "transforms.convertTime.unix.precision": "milliseconds",
    "transforms.exclude.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.exclude.whitelist": "timestamp,device_id,temperature,humidity,pressure,battery",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://schema-registry:8081",
    "value.converter.schemas.enable": "true",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "errors.deadletterqueue.topic.name": "dlq-iot_messages",
    "errors.deadletterqueue.topic.replication.factor": 1,
    "errors.deadletterqueue.context.headers.enable": true,
    "delete.enabled": "false"
  }
} 